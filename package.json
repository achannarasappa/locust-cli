{
  "name": "@achannarasappa/locust-cli",
  "version": "0.1.0",
  "description": "Utility tool and command line UI to develope locust jobs",
  "bin": {
    "cli": "bin/cli.js"
  },
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "lint": "eslint ./lib ./test ./bin",
    "lint:fix": "eslint --fix ./lib ./test ./bin",
    "test": "mocha --exit --grep @remote --invert --timeout 10000 './{,!(node_modules)/**/}*.spec.js'",
    "test:watch": "npm run test -- --watch"
  },
  "author": "Ani Channarasappa",
  "license": "MIT",
  "devDependencies": {
    "@achannarasappa/eslint-config": "^1.0.4",
    "@hapi/hapi": "^18.4.0",
    "@hapi/vision": "^5.5.2",
    "chai": "^4.2.0",
    "docker-names": "^1.1.1",
    "eslint": "^6.6.0",
    "handlebars": "^4.5.3",
    "husky": "^3.1.0",
    "mocha": "^5.2.0",
    "sinon": "^7.2.3"
  },
  "dependencies": {
    "@achannarasappa/locust": "^1.0.0",
    "inquirer": "^6.2.1",
    "ioredis": "^4.3.0",
    "moment": "^2.24.0",
    "prettyjson": "^1.2.1",
    "puppeteer": "^1.11.0",
    "ramda": "^0.26.1",
    "shelljs": "^0.8.3",
    "terminal-kit": "^1.28.0",
    "yargs": "^12.0.5"
  },
  "eslintConfig": {
    "extends": "@achannarasappa/eslint-config",
    "env": {
      "mocha": true,
      "node": true
    },
    "rules": {
      "consistent-return": "off",
      "no-console": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm audit"
    }
  }
}
